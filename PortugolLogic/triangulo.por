programa {
  funcao inicio() {
// Leia a base e altura de um triangulo, calcule e apresente o valor da area: area = (base * altura) / 2
// Variaveis
  real base, largura, area
// Entradas
  escreva("digite a base do triangulo: ")
  leia(base)
  escreva("digite a largura do triangulo: ")
  leia(largura)
// Processamento
  area = (base * largura) / 2
// Saidas
  escreva("Area: ", area)
  }
}
